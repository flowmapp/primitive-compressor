{
  "name": "primitive-compressor",
  "version": "1.0.0",
  "description": "JSON compressor for wireframe primitives",
  "browser": "dist/web.js",
  "main": "dist/node.js",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:node && yarn build:web",
    "build:node": "esbuild --bundle index.js --outfile=dist/node.js --platform=node",
    "build:web": "esbuild --bundle index.js --outfile=dist/web.js --minify --sourcemap"
  },
  "devDependencies": {
    "esbuild": "^0.17.19",
    "eslint": "^8.40.0",
    "prettier": "^2.8.8"
  }
}
